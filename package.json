{
  "name": "postcss-browser",
  "version": "8.3.6",
  "description": "Tool for transforming styles with JS plugins",
  "engines": {
    "node": "^10 || ^12 || >=14"
  },
  "module": "dist/postcss.js",
  "types": "./lib/postcss.d.ts",
  "keywords": [
    "css",
    "postcss",
    "rework",
    "preprocessor",
    "parser",
    "source map",
    "transform",
    "manipulation",
    "transpiler"
  ],
  "scripts": {
    "test": "jest --coverage && eslint . && ./test/version.js && check-dts && ./test/integration.js && yaspeller *.md docs/{**/,}*.md && size-limit",
    "build": "rollup --config rollup.config.js"
  },
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/postcss/"
  },
  "author": "china-bin",
  "license": "MIT",
  "homepage": "https://postcss.org/",
  "repository": "postcss/postcss",
  "bugs": {
    "url": "https://github.com/postcss/postcss/issues"
  },
  "dependencies": {
    "nanocolors": "^0.1.5",
    "nanoid": "^3.1.25",
    "source-map-js": "^0.6.2"
  },
  "devDependencies": {
    "@logux/eslint-config": "^45.4.8",
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-node-resolve": "^13.0.5",
    "@size-limit/preset-small-lib": "^5.0.4",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.9.6",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "check-dts": "^0.5.6",
    "ci-job-number": "^1.2.2",
    "clean-publish": "^2.2.0",
    "concat-with-sourcemaps": "^1.1.0",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jest": "^24.4.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^1.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-unicorn": "^36.0.0",
    "fs-extra": "^10.0.0",
    "jest": "^27.2.1",
    "lint-staged": "^11.1.2",
    "nanodelay": "^1.0.8",
    "postcss-parser-tests": "^8.3.6",
    "prettier": "^2.4.1",
    "rollup": "^2.57.0",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "simple-git-hooks": "^2.6.1",
    "size-limit": "^5.0.4",
    "strip-ansi": "^6.0.0",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.3",
    "yaspeller": "^7.0.0"
  },
  "lint-staged": {
    "*.md": "yaspeller",
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ],
    "package.json": "./test/version.js"
  },
  "simple-git-hooks": {
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "browser": {
    "./lib/terminal-highlight": false,
    "source-map-js": false,
    "path": false,
    "url": false,
    "fs": false
  },
  "size-limit": [
    {
      "path": "lib/postcss.js",
      "limit": "23 KB"
    }
  ],
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "globals": {
      "ts-jest": {
        "isolatedModules": true
      }
    },
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/ts",
    "rules": {
      "@typescript-eslint/no-explicit-any": "off",
      "consistent-return": "off",
      "global-require": "off",
      "no-console": "off"
    },
    "overrides": [
      {
        "files": [
          "*.test.js"
        ],
        "rules": {
          "no-unused-expressions": "off",
          "func-style": "off"
        }
      },
      {
        "files": [
          "*.test.ts"
        ],
        "rules": {
          "@typescript-eslint/no-unused-expressions": "off",
          "func-style": "off"
        }
      }
    ]
  },
  "eslintIgnore": [
    "docs/api/assets/",
    "errors.ts"
  ],
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "excludeFiles": [
      "docs/README-cn.md"
    ],
    "ignoreText": [
      " \\(by [^)]+\\).",
      "“[^”]+”"
    ],
    "dictionary": [
      "6to5",
      "A CI",
      "Andalusian",
      "ASE",
